
---
import "@fontsource/ibm-plex-mono";

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="bg-zinc-900 text-zinc-100 antialiased leading-tight scrollbar-thin scrollbar-thumb-zinc-700 scrollbar-track-zinc-90 scrollbar-thumb-rounded-full scrollbar-track-rounded-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="shiro" />
    <meta property="og:description" content="serial experiments shiro" />
    <meta property="og:image" content="/shiro.png" />
    <meta property="og:url" content="https://shiro.vc" />
    <meta name="description" content="serial experiments shiro" />
    <link rel="icon" href="/shiro.png" />
    <title>shiro - {title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "IBM Plex Mono", monospace;
  }
</style>
